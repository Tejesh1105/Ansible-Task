---
- name: Webserver setup
  hosts: webserver
  become: yes
  tasks: 
    - name: Install httpd
      ansible.builtin.yum:
        name: httpd
        state: present
    
    - name: Start Service
      ansible.builtin.service:
        name: httpd
        state: started
        enabled: yes 

    - name: copy index file
      copy:
        src: files/index.html
        dest: /var/www/html/index.html
        
